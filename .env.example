# ===================================
# ENVIRONMENT CONFIGURATION
# ===================================

# Node Environment (development, staging, production)
NODE_ENV=production

# ===================================
# SERVER CONFIGURATION
# ===================================

# Server Port
PORT=10000

# Application URL (used for email links and redirects)
APP_URL=https://your-domain.onrender.com

# ===================================
# DATABASE CONFIGURATION
# ===================================

# MySQL Database Connection String
# Format: mysql://user:password@host:port/database
# Example: mysql://avaliacao_user:mypassword@localhost:3306/avaliacao_psicologica
DATABASE_URL=mysql://user:password@host:3306/avaliacao_psicologica

# ===================================
# SECURITY & AUTHENTICATION
# ===================================

# Session Secret (REQUIRED)
# Generate a secure random string (at least 32 characters)
# You can generate one at: https://randomkeygen.com/
SESSION_SECRET=your-secure-random-secret-key-min-32-chars-here

# JWT Secret (REQUIRED)
# Generate a different secure random string for JWT signing
JWT_SECRET=another-secure-random-secret-key-for-jwt-here

# ===================================
# OAUTH CONFIGURATION (Optional)
# ===================================

# Manus OAuth Server (if using OAuth login)
# VITE_APP_ID=your-manus-app-id
# OAUTH_SERVER_URL=https://oauth.manus.im
# OWNER_OPEN_ID=your-owner-openid

# Generic OAuth (alternative)
# OAUTH_CLIENT_ID=your-oauth-client-id
# OAUTH_CLIENT_SECRET=your-oauth-client-secret
# OAUTH_CALLBACK_URL=https://your-domain.com/api/oauth/callback

# ===================================
# EMAIL CONFIGURATION (Optional)
# ===================================

# Option 1: SendGrid (Recommended for production)
# SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
# FROM_EMAIL=noreply@your-domain.com
# FROM_NAME=Sistema de Avaliação Psicológica

# Option 2: SMTP (Gmail, Outlook, etc)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# FROM_EMAIL=noreply@your-domain.com
# FROM_NAME=Sistema de Avaliação Psicológica

# ===================================
# AWS S3 STORAGE (Optional)
# ===================================

# AWS Credentials for file storage (assessment PDFs, exports)
# AWS_ACCESS_KEY_ID=your-aws-access-key-id
# AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=avaliacao-psicologica-files

# ===================================
# OPENAI / AI CONFIGURATION (Optional)
# ===================================

# OpenAI API Key for AI-powered assessment analysis
# OPENAI_API_KEY=sk-your-openai-api-key-here
# OPENAI_MODEL=gpt-4
# OPENAI_MAX_TOKENS=2000

# Manus Built-in Forge API (alternative)
# BUILT_IN_FORGE_API_URL=https://forge.manus.im/api
# BUILT_IN_FORGE_API_KEY=your-forge-api-key

# ===================================
# MONITORING & LOGGING (Optional)
# ===================================

# Sentry Error Tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=production
# SENTRY_TRACES_SAMPLE_RATE=0.1

# Log Level (error, warn, info, debug, trace)
# LOG_LEVEL=info

# Log Format (json, pretty)
# LOG_FORMAT=json

# ===================================
# CDN CONFIGURATION (Optional)
# ===================================

# CDN URL for static assets
# CDN_URL=https://cdn.your-domain.com

# ===================================
# RATE LIMITING (Optional)
# ===================================

# Maximum requests per window per IP
# RATE_LIMIT_MAX=100
# RATE_LIMIT_WINDOW_MS=900000

# ===================================
# CORS CONFIGURATION (Optional)
# ===================================

# Allowed origins (comma-separated)
# CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com

# ===================================
# FEATURE FLAGS (Optional)
# ===================================

# Enable/disable specific features
# FEATURE_EMAIL_ENABLED=true
# FEATURE_WHATSAPP_ENABLED=true
# FEATURE_AI_ANALYSIS_ENABLED=true
# FEATURE_S3_STORAGE_ENABLED=false

# ===================================
# DEVELOPMENT ONLY
# ===================================

# These should NOT be set in production

# Skip authentication (DEV ONLY - DANGEROUS)
# DEV_SKIP_AUTH=false

# Mock external services (DEV ONLY)
# DEV_MOCK_EMAIL=false
# DEV_MOCK_S3=false

# Database Debug Logging
# DB_DEBUG=false

# ===================================
# NOTES
# ===================================

# 1. NEVER commit .env files to version control
# 2. Use strong, unique secrets for SESSION_SECRET and JWT_SECRET
# 3. In production, set NODE_ENV=production
# 4. Configure at least one email provider for full functionality
# 5. AWS S3 is optional but recommended for file storage
# 6. Sentry is highly recommended for production monitoring
# 7. All secrets should be at least 32 characters long
# 8. Rotate secrets regularly (every 90 days recommended)
