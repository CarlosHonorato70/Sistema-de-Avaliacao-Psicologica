# Environment Configuration
NODE_ENV=production

# Server Configuration
PORT=10000

# Database Configuration
# Format: mysql://user:password@host:port/database
DATABASE_URL=mysql://user:password@host:3306/avaliacao_psicologica

# Session Security
# Generate a secure random string for production
SESSION_SECRET=your-secure-random-secret-key-here

# OAuth Configuration (if using OAuth login)
# OAUTH_CLIENT_ID=your-oauth-client-id
# OAUTH_CLIENT_SECRET=your-oauth-client-secret
# OAUTH_CALLBACK_URL=https://your-domain.com/api/oauth/callback

# Email Configuration (Optional - for real email sending)
# SENDGRID_API_KEY=your-sendgrid-api-key
# OR
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# FROM_EMAIL=noreply@your-domain.com
# FROM_NAME=Sistema de Avaliação Psicológica

# AWS S3 Configuration (Optional - if using file storage)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name

# Application URL (for email links)
APP_URL=https://your-domain.onrender.com
